<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <style>
      .row{
        width: 100%;
        height: 4rem;
        display: flex;
        flex-flow: nowrap row;
        justify-content: space-between;
        align-items: center;
      }

      .row > input {
        width: 40%;
        height: 3rem;
        border-radius: 1rem;
        padding-left: 1rem;
      }
    </style>
  </head>

  <body>
    <script src={{script}}></script/>
    <script src="asiabill-example.js"></script>

    <div id="app">
      <div class="form-wrap">
        <form id="payment-form">
          <div class="row">
            <input type="text" name="first name" required autocomplete='cc-family-name' id="firstName" placeholder="First Name">
            <input type="text" name="last name" required autocomplete='cc-given-name' id="lastName" placeholder="Last Name">
          </div>
          <div id="ab-card-element" class="ab-element"></div>
          <div id="card-errors" role="alert"></div>
          <div class="card-save">
            <input type="checkbox" id="card-save">
          </div>
          <button id="ab_submit" type="submit">Pay Now</button>
        </form>
      </div>
    </div>

  </body>

</html>
